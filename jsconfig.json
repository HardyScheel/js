{
    "compilerOptions": {
        // Specifies which default library (lib.d.ts) to use.
        "target": "es6",
        // Specifies the module system, when generating module code.
        "module": "commonjs",
        // Enable TypeScript type checking for JavaScript.
        "checkJs": true
    },
    "include": ["es2015/**/*"],
    // Exlude files not to type check.
    "exclude": ["node_modules", "**/node_modules/*"]
}
